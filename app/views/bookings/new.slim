.booking
  .booking__room-info-container
    div
      h4 Phòng #{ @room.room_number }
      p Phòng #{ @room.room_type   }
    div
      h4 Phòng trống

  div
    .booking__form-title-container
      h4 Thông tin chi tiết
      p Chụp ảnh thông tin

    .booking__form-wrapper
      = simple_form_for :room_bookings, url: room_bookings_path(@room), method: :post do |f|
        .booking__main-content-wrapper
          = f.label 'Tên khách hàng'
          = f.input :name, label: false

          = f.label 'Số CMND'
          = f.input :customer_nin, label: false

          = f.label 'Số điện thoại'
          = f.input :booking_phone_number, label: false

          .booking__time-wrapper
            div
              = f.label 'Ngày vào'
              = f.input :checkin_time,  as: :datetime, html5: true, input_html: {value: @checkin_time},  label: false
            div
              = f.label 'Ngày đi'
              = f.input :checkout_time, as: :datetime, html5: true, input_html: {value: @checkout_time}, label: false

          .booking__status-wrapper
            div
              = f.input :rent_type, collection: ['hourly', 'overnight'],  as: :radio_buttons

          .booking__customer_mates
            button + Thêm khách cùng phòng

        .booking__buttton-wrapper
          = f.button :submit, 'Bắt đầu nhận phòng'
