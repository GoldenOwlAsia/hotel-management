div class=('rooms__room ' + get_rom_status_class(room))
  div
    .rooms__number-wrapper
      h5.rooms__room-title Phòng
      h5.rooms__room-title
        = room.room_number

    .rooms__checkin-time-wrapper
      p Giờ check in: #{Time.now.strftime('%H:%M')}
      p
      = Time.now.strftime('%d.%m.%y')

    .rooms__status-wrapper
      p #{ get_rom_status_text(room) }

  div
    .rooms__choose-room-btn-wrapper
      = link_to 'Chọn phòng', '#'

    .rooms__rent-type-wrapper
      - if room.rent_type.present?
        h5.rooms__room-title Hình thức
        p.rooms__rent-type
          = get_rent_type_text(room)
